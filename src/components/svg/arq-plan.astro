<svg
  width="100%"
  height="100%"
  viewBox="0 0 1400 1000"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class="opacity-90 dark:opacity-90"
>
  <!-- Base Grid (Faint) -->
  <pattern id="grid" width="100" height="100" patternUnits="userSpaceOnUse">
    <path
      d="M 100 0 L 0 0 0 100"
      fill="none"
      stroke="currentColor"
      stroke-width="0.5"
      class="opacity-10"></path>
  </pattern>
  <rect width="1400" height="1000" fill="url(#grid)"></rect>

  <!-- Secondary Dense Grid (Limited Area) -->
  <path
    d="M0 200H1400 M0 220H1400 M0 240H1400 M0 260H1400 M0 280H1400"
    stroke="currentColor"
    stroke-width="0.2"
    class="opacity-10"></path>
  <path
    d="M1000 0V1000 M1020 0V1000 M1040 0V1000 M1060 0V1000"
    stroke="currentColor"
    stroke-width="0.2"
    class="opacity-10"></path>

  <!-- Large Structural Blocks (Parcels) -->
  <!-- Parcel A -->
  <path
    d="M100 100 L400 100 L400 400 L100 600 Z"
    stroke="currentColor"
    stroke-width="0.5"
    fill="none"
    class="opacity-30"></path>
  <circle cx="100" cy="100" r="2" fill="currentColor"></circle>
  <circle cx="400" cy="100" r="2" fill="currentColor"></circle>
  <circle cx="400" cy="400" r="2" fill="currentColor"></circle>

  <!-- Parcel B (Central Complex) -->
  <g class="animate-pulse-slow">
    <path
      d="M500 200 L800 200 L900 300 L900 600 L600 800 L500 600 Z"
      stroke="currentColor"
      stroke-width="1"
      fill="none"
      class="opacity-60"></path>
    <path
      d="M520 220 L780 220 L860 310 L860 580 L610 760 L520 600 Z"
      stroke="currentColor"
      stroke-width="0.3"
      stroke-dasharray="5 5"
      fill="none"
      class="opacity-40"></path>
  </g>

  <!-- Parcel C (Right Wing) -->
  <path
    d="M1100 100 L1300 100 L1300 900 L1100 900 Z"
    stroke="currentColor"
    stroke-width="0.5"
    fill="none"
    class="opacity-40"></path>
  <line
    x1="1100"
    y1="200"
    x2="1300"
    y2="200"
    stroke="currentColor"
    stroke-width="0.2"></line>
  <line
    x1="1100"
    y1="300"
    x2="1300"
    y2="300"
    stroke="currentColor"
    stroke-width="0.2"></line>
  <line
    x1="1100"
    y1="400"
    x2="1300"
    y2="400"
    stroke="currentColor"
    stroke-width="0.2"></line>

  <!-- Connecting Infrastructure Lines -->
  <path
    d="M400 250 L500 250"
    stroke="currentColor"
    stroke-width="0.5"
    class="opacity-50"></path>
  <path
    d="M900 400 L1100 400"
    stroke="currentColor"
    stroke-width="0.5"
    class="opacity-50"></path>
  <path
    d="M400 500 L600 800"
    stroke="currentColor"
    stroke-width="0.5"
    stroke-dasharray="10 5"
    class="opacity-30"></path>

  <!-- Circular Zones -->
  <!-- Radar/Scan Zone -->
  <g transform="translate(300, 700)">
    <circle
      cx="0"
      cy="0"
      r="100"
      stroke="currentColor"
      stroke-width="0.3"
      class="opacity-20"></circle>
    <circle
      cx="0"
      cy="0"
      r="150"
      stroke="currentColor"
      stroke-width="0.2"
      class="opacity-10"></circle>
    <circle
      cx="0"
      cy="0"
      r="80"
      stroke="currentColor"
      stroke-width="0.5"
      stroke-dasharray="2 4"
      class="opacity-30 animate-spin-slow"></circle>
    <line
      x1="-150"
      y1="0"
      x2="150"
      y2="0"
      stroke="currentColor"
      stroke-width="0.2"
      class="opacity-20"></line>
    <line
      x1="0"
      y1="-150"
      x2="0"
      y2="150"
      stroke="currentColor"
      stroke-width="0.2"
      class="opacity-20"></line>
  </g>

  <!-- Topographic / Organic Lines -->
  <path
    d="M0 600 C 200 650, 400 550, 600 600 S 800 700, 1000 650 S 1200 600, 1400 650"
    stroke="currentColor"
    stroke-width="0.3"
    class="opacity-40"
    fill="none"></path>
  <path
    d="M0 650 C 200 700, 400 600, 600 650 S 800 750, 1000 700 S 1200 650, 1400 700"
    stroke="currentColor"
    stroke-width="0.3"
    class="opacity-30"
    fill="none"></path>

  <!-- Measurement Annotations -->
  <g
    font-family="monospace"
    font-size="8"
    fill="currentColor"
    class="opacity-60"
  >
    <text x="510" y="190">BLOCK_ALPHA_01</text>
    <text x="1110" y="90">LINEAR_ARRAY_B</text>
    <text x="310" y="820">SECTOR_SCAN_RADIAL</text>

    <!-- Dimension Lines -->
    <line
      x1="500"
      y1="180"
      x2="800"
      y2="180"
      stroke="currentColor"
      stroke-width="0.2"></line>
    <line
      x1="500"
      y1="175"
      x2="500"
      y2="185"
      stroke="currentColor"
      stroke-width="0.2"></line>
    <line
      x1="800"
      y1="175"
      x2="800"
      y2="185"
      stroke="currentColor"
      stroke-width="0.2"></line>
    <text x="630" y="170">300.00m</text>
  </g>

  <!-- Floating Markers -->
  <rect
    x="850"
    y="150"
    width="10"
    height="10"
    stroke="currentColor"
    stroke-width="0.5"
    class="opacity-50"></rect>
  <rect
    x="870"
    y="150"
    width="10"
    height="10"
    stroke="currentColor"
    stroke-width="0.5"
    class="opacity-50"></rect>
  <rect
    x="890"
    y="150"
    width="10"
    height="10"
    stroke="currentColor"
    stroke-width="0.5"
    class="opacity-50"></rect>

  <!-- Diagonal Hashing -->
  <path
    d="M1200 700 L1250 750 M1210 700 L1260 750 M1220 700 L1270 750"
    stroke="currentColor"
    stroke-width="0.3"
    class="opacity-30"></path>
</svg>
